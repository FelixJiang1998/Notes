<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:src="@drawable/zhi" />

        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp"
            android:paddingTop="75dp"
            android:textColor="#DC143C"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/book" />

        <ImageButton
            android:id="@+id/txtNote"
            android:layout_width="856dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:background="#00ffffff"
            android:src="@drawable/text_notes" />

        <ImageButton
            android:id="@+id/voiceNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNote"
            android:layout_marginTop="-15dp"
            android:background="#00ffffff"
            android:src="@drawable/recorder" />

        <ImageButton
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_below="@id/voiceNote"
            android:layout_marginTop="-19dp"
            android:background="#00ffffff"
            android:src="@drawable/reminder" />

        <ImageButton
            android:id="@+id/gengduo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder"
            android:layout_marginTop="-19dp"
            android:background="#00ffffff"
            android:src="@drawable/all_notes" />
    </RelativeLayout>


</LinearLayout>
